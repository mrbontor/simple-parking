{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "type": "object",
    "required": ["name"],
    "properties": {
        "name": {
            "type": "string",
            "minLength": 3,
            "errorMessage": {
                "minLength": "Name should be greater than 3 character.",
                "type": "Name must be string"
            }
        },
        "description": {
            "type": ["string", "null"],
            "default": null
        },
        "status": {
            "type": "boolean",
            "enum": [true, false],
            "default": true,
            "errorMessage": {
                "enum": "Please select one of options."
            }
        }
    },
    "additionalProperties": false,
    "errorMessage": {
        "type": "should be an object",
        "required": {
            "name": "Name is required!"
        }
    }
}
